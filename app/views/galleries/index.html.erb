<% if current_user%>
<%= link_to '新增安裝案例', new_gallery_path, class: 'btn btn-info btn-lg' %>
<% end %>
<style>
img {
    opacity: 0.5;
    filter: alpha(opacity=40); /* For IE8 and earlier */
    transition: opacity 0.4s;
    transition: transform 0.4s;
}

img:hover {
    transform: scale(1.1,1.1);
    opacity: 1.0;
    filter: alpha(opacity=100); /* For IE8 and earlier */
}
</style>


<div class="container">
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">安裝案例
                    <small>台中各地區皆有安裝經驗</small>
                </h1>
            </div>
        </div>
</div>
<div class="col-md-12">
    <% @galleries.each do |gallery| %>

         <div class="col-md-3 effect-item">
            <% if gallery.pictures.first %>
            <%= link_to image_tag(gallery.pictures.first.image.url(:medium)), gallery_path(gallery) %>
            <% else %>
              N/A
            <% end %>
            <h3 style="text-align:center"><%= gallery.name%></h3> 
            </div>
    <% end %>


</div>
 <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <%= paginate @galleries, :theme => 'bootstrap3'  %>
                </ul>
            </div>

          <%= link_to '回到首頁', root_path, class: "btn btn-info btn-lg" %>

        </div>


        </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


<br>


