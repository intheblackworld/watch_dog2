<%= form_for @gallery, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this install from being saved:</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
<div class="col-md-4 col-md-offset-4 down-mid">
<h1>新增安裝案例</h1>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'form-control', placeholder: '輸入安裝案例名稱' %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :pictures, :class => 'control-label' %>
    <div class="controls">
      <!-- The magic is coming ...look at my eyes....shazammmm -->
      <%= file_field_tag "images[]", type: :file, multiple: true, placeholder: "上傳圖片" %>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
  <hr>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                galleries_path, :class => 'btn btn-mini' %>
  </div>
  </div>
  </div>
  <% end %>
