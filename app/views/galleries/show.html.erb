<% if current_user%>
<%= link_to '新增安裝案例', new_gallery_path, class: 'btn btn-info btn-lg' %>
<% end %>


<div class="container-fluid">
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">安裝案例
                    <small>台中各地區皆有安裝經驗</small>
                </h1>
            </div>
        </div>
  <h3>
    <%= @gallery.name %>
  </h3>
   <% if !current_user %>
    <%else%>
  <div class="form-actions">
    <%= link_to '回上頁', galleries_path, :class => 'btn btn-mini'  %>
    <%= link_to '修改此案例', edit_gallery_path(@gallery), :class => 'btn btn-mini' %>
    <%= link_to '刪除此案例', gallery_path(@gallery), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
    <%end%>
  </div>
</div>
<div class="col-md-12">
<% @pictures.each_slice(3) do |pictures| %>

<div class="row">
   <% pictures.each do |pic| %>
    <div class="col-md-4 effect-item">
      <%= image_tag pic.image.url(:medium) %>
        <% if !current_user %>
                    <%else%>

          <%end%>
      </div>
    <% end %>
    </div>
<% end %>
</div>


<div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <%= paginate @pictures, :theme => 'bootstrap3'  %>
                </ul>
            </div>

          <%= link_to '回到首頁', root_path, class: "btn btn-info btn-lg" %>

        </div>
</div>
<script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


