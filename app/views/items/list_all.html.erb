<% if current_user %>
<%= link_to '新增產品類別', new_classification_path,class: "btn btn-info btn-lg" %>
<h1>如欲新增產品請先選擇以下類別</h1>
<%end%>

<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">產品類別
                    <small></small>
                </h1>
            </div>
        </div>


    <% @classifications.each_slice(6) do |classifications| %>
      <div class="row">
      <% classifications.each do |classification| %>

      <div class="col-md-2 center-text">
        <%= link_to classification_items_path(classification), class: "btn btn-success " do %>
          <%=classification.title %>
          <span class="badge"><%= classification.items.size %></span>
        <%end%>
        <hr>
        <% if !current_user %>
        <%else%>
        <%= link_to 'Edit', edit_classification_path(classification) %>
        <%= link_to 'Destroy', classification, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <%end%>

       </div>
       <%end%> 
      </div>

    <% end %>



<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <small style="color:#FFCC33">精選產品</small>
                </h1>
            </div>
        </div>



<div class="row">
  <% @items.each_slice(3) do |items| %>
    <div class="row">
      <% items.each do |item| %>
        <div class="col-md-4 effect-item">
           <%= image_tag item.image.url(:medium) %>
           <h2><%= item.model_number %></h2>
           <h4><%= item.title %></h4>
            
        </div>
      <%end%>  
    </div>
  <%end%>      

</div>


        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <%= paginate @items, :theme => 'bootstrap3'  %>
                    
                </ul>
            </div>

          <%= link_to '回到首頁', root_path, class: "btn btn-info btn-lg" %>

        </div>
      




    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


<br>




